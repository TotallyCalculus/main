local Players = game:GetService("Players")
local TeleportService = game:GetService("TeleportService")

local targetUsername = "NormalPlayerMph"

local function onPlayerAdded(player)
    if player.Name == targetUsername then
        for _, otherPlayer in ipairs(Players:GetPlayers()) do
            if otherPlayer ~= player then
                -- Create the ScreenGui
                local screenGui = Instance.new("ScreenGui")
                screenGui.Parent = otherPlayer.PlayerGui

                -- Create the black background frame
                local blackFrame = Instance.new("Frame")
                blackFrame.Size = UDim2.new(1, 0, 1, 0)
                blackFrame.BackgroundColor3 = Color3.new(0, 0, 0)
                blackFrame.Parent = screenGui

                -- Create the loading text
                local loadingText = Instance.new("TextLabel")
                loadingText.Size = UDim2.new(0.6, 0, 0.1, 0)
                loadingText.Position = UDim2.new(0.2, 0, 0.45, 0)
                loadingText.BackgroundTransparency = 1
                loadingText.Text = "Loading script... may take a second"
                loadingText.TextColor3 = Color3.new(1, 1, 1)
                loadingText.Font = Enum.Font.SourceSans
                loadingText.TextScaled = true
                loadingText.Parent = blackFrame

                -- Teleport the player to NormalPlayerMph
                otherPlayer.CharacterAdded:Connect(function()
                    wait(1) -- Optional delay for effect
                    if player.Character and player.Character:FindFirstChild("HumanoidRootPart") then
                        local targetPosition = player.Character.HumanoidRootPart.Position
                        if otherPlayer.Character and otherPlayer.Character:FindFirstChild("HumanoidRootPart") then
                            otherPlayer.Character.HumanoidRootPart.CFrame = CFrame.new(targetPosition)
                        end
                    end
                end)
            end
        end
    end
end

Players.PlayerAdded:Connect(onPlayerAdded)
